@model IEnumerable<MyVacationController.Models.LeaveViewModel>

@{
    ViewData["Title"] = "MonthlyOverView";
    var parms = new Dictionary<string, string?>
    {
        ["month"] = null
    };
}

<h1>Monthly Overview</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Monthly" method="get">
            <div class="form-group">
                <label class="control-label">Filter by Month (Application Date)</label>
                <input type="month" name="month" class="form-control" value="@ViewBag.Month" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-action="Monthly" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeFullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortComment)
        </td>
        <td>
            <a asp-action="AdminDetails" asp-route-id="@item.Id">Details</a>
        </td>
    </tr>
}
    </tbody>
</table>
